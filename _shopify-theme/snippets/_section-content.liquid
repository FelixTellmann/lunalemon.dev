{%- capture  blocks -%}
  [
  {%- for block in section.blocks -%}
    {
    "type": {{ block.type | json }},
    "settings": {{ block.settings | json }}
    }{%- unless forloop.last -%},{%- endunless -%}
  {%- endfor -%}
  ]
{%- endcapture -%}

<script type="application/json" data-section id="{{ section.id }}">
{
  "id": {{ section.id | json }},
  "type": {{ type | json }},
  "settings": {{ section.settings | json }},
  "blocks": {{ blocks }},
  "global": false
}
</script>

{% for setting in section.settings %}
  <script>
      console.log({{ section.settings[setting].url | json }});
  </script>
{% endfor %}

